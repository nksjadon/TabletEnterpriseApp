<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="230dp"
        android:layout_height="match_parent"
        android:id="@+id/listFragment"
        android:layout_alignParentTop="false"></RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/contentFragment"
        android:layout_toRightOf="@+id/listFragment"
        android:layout_marginLeft="5dp"></RelativeLayout>

    <RelativeLayout
        android:id="@+id/subContentFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/contentFragment"
        android:layout_toRightOf="@+id/listFragment"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"></RelativeLayout>




</RelativeLayout>
